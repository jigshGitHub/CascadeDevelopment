@model IList<Cascade.Data.Models.vw_PortfolioTransactions>
@using Cascade.Web.Presentation.ExtensionMethods

<link href="@Url.Content("~/Content/dataTables/demo_table.css")" rel="stylesheet" type="text/css" />

<script src="~/Scripts/datatable/jquery-1.4.4.min.js" type="text/javascript"></script>
<script src="~/Scripts/datatable/index.js" type="text/javascript"></script>
<script src="~/Scripts/datatable/jquery.dataTables.min.js" type="text/javascript"></script>

<h2>Report: Portfolio Transactions</h2>

<div id="divPortTransactions">
    <table id="portTransaction" class="display">
        <thead>
            <tr> 
                <th>Portfolio#</th>
                <th>Closing Date</th>
                <th>Purchase Price</th>
                <th>Sales Price</th>
                <th>Trans Type</th>
                <th>Company</th>
                <th>Lender</th>
                <th>Agency</th>
                <th>Seller</th>
            </tr> 
        </thead> 
        <tbody> 
            @foreach (var portTransaction in Model)
            {
                <tr>
                    <td>@portTransaction.Portfolio_</td>
                    <td>@portTransaction.ClosingDate.ConverToDate()</td>
                    <td>@portTransaction.PurchasePrice.ToIntegerCurrency()</td>
                    <td>@portTransaction.SalesPrice.ToIntegerCurrency()</td>
                    <td>@portTransaction.TransType</td>
                    <td>@portTransaction.Company</td>
                    <td>@portTransaction.Lender_FileDescription</td>
                    <td>@portTransaction.Agency</td>
                    <td>@portTransaction.Seller</td>
                </tr> 
            }
        </tbody>
    </table>
</div>