@model IList<Cascade.Data.Models.Port_Trans>
@using Cascade.Web.Presentation.ExtensionMethods

<link href="@Url.Content("~/Content/dataTables/demo_table.css")" rel="stylesheet" type="text/css" />

<script src="~/Scripts/datatable/jquery-1.4.4.min.js" type="text/javascript"></script>
<script src="~/Scripts/datatable/index.js" type="text/javascript"></script>
<script src="~/Scripts/datatable/jquery.dataTables.min.js" type="text/javascript"></script>

<h2>Report: Sales</h2>

<div id="divSales">
    <table id="sales" class="display">
        <thead>
            <tr> 
                <th>Portfolio#</th>
                <th>Closing Date</th>
                <th>Buyer</th>
                <th>Face Value</th>
                <th>SalesBasis</th>
                <th>SalesPrice</th>
                <th>TransType</th>
            </tr> 
        </thead> 
        <tbody> 
            @foreach (var sale in Model)
            {
                <tr>
                    <td>@sale.Portfolio_</td>
                    <td>@sale.ClosingDate.ConverToDate()</td>
                    <td>@sale.Buyer</td>
                    <td>@sale.FaceValue.ToIntegerCurrency()</td>
                    <td>@sale.SalesBasis</td>
                    <td>@sale.SalesPrice.ToIntegerCurrency()</td>
                    <td>@sale.TransType</td>
                </tr> 
            }
        </tbody>
    </table>
</div>