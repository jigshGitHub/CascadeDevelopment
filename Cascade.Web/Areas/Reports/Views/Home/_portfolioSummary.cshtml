@model IList<Cascade.Data.Models.vw_PortfolioSummary>
@using Cascade.Web.Presentation.ExtensionMethods

<link href="@Url.Content("~/Content/dataTables/demo_table.css")" rel="stylesheet" type="text/css" />

<script src="~/Scripts/datatable/jquery-1.4.4.min.js" type="text/javascript"></script>
<script src="~/Scripts/datatable/index.js" type="text/javascript"></script>
<script src="~/Scripts/datatable/jquery.dataTables.min.js" type="text/javascript"></script>

<h2>Report: Portfolio Summary</h2>

<div id="divPortSummary">
    <table id="portSummary" class="display">
        <thead>
            <tr> 
                <th>Portfolio#</th>
                <th>Closing Date</th>
                <th>Face</th>
                <th>Costbasis</th>
                <th>Lender</th>
                <th>Purchase Price</th>
                <th>Sum of Sales Price</th>
                <th>CashPos</th>
                <th>Return on Capital</th>
                <th>irrIRR</th>
            </tr> 
        </thead> 
        <tbody> 
            @foreach (var portSummary  in Model)
            {
                <tr>
                    <td>@portSummary.Portfolio_</td>
                    <td>@portSummary.ClosingDate.ConverToDate()</td>
                    <td>@portSummary.Face.ToIntegerCurrency()</td>
                    <td>@portSummary.CostBasis</td>
                    <td>@portSummary.Lender_FileDescription</td>
                    <td>@portSummary.PurchasePrice.ToIntegerCurrency()</td>
                    <td>@portSummary.SumOfSalesPrice.ToIntegerCurrency()</td>
                    <td>@portSummary.CashPos.ToIntegerCurrency()</td>
                    <td>@portSummary.Return_on_Capital</td>
                    <td>@portSummary.irrIRR</td>
                </tr> 
            }
        </tbody>
    </table>
</div>