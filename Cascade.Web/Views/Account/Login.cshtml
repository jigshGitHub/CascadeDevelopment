@model Cascade.Web.Models.LoginModel
@{
    ViewBag.Title = "Log in";
}
<style>
    /*
    body {
        background-color: #336699;
        background-image: url('../Images/main.png') ;
        
    }*/
    html {
        background: url('../Images/main.png') ;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
    }

    #login {
    }

        #login table {
            color: #1f497d;
            background-color: #fff;
            font-family: Verdana;
            width: 100%;
        }

        #login .submitButton {
            background-color: #1f497d;
            color: #fff;
        }

        #login .userInputText {
            background: lightblue;
            box-shadow: inset 0 2px 10px blue, 0 1px 1px green;
            -o-box-shadow: inset 0 2px 10px blue, 0 1px 1px green;
            -webkit-box-shadow: inset 0 2px 10px blue, 0 1px 1px green;
            -moz-box-shadow: inset 0 2px 10px blue, 0 1px 1px green;
        }
</style>
<body>
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        <div id="login">
            <table>
                <tr>
                    <td style="width: 50%">
                        <img src="~/Images/Logo.png" /></td>
                    <td>
                        <table>
                            <tr>
                                <td>
                                    <b>@Html.LabelFor(m => m.UserName)</b>
                                </td>
                                <td>:
                                </td>
                                <td>
                                    @Html.TextBoxFor(m => m.UserName,new {@class="userInputText"})
                                </td>
                                <td>
                                    <b>@Html.LabelFor(m => m.Password)</b>
                                </td>
                                <td>:
                                </td>
                                <td>
                                    @Html.PasswordFor(m => m.Password,new {@class="userInputText"})
                                </td>
                                <td>
                                    <input type="submit" class="submitButton" value="Log in" />
                                </td>
                            </tr>
                            <tr>
                                <td colspan="7">@Html.ValidationSummary(true, "Log in was unsuccessful. Please correct the errors and try again.")

                                </td>
                            </tr>
                        </table>
                    </td>

                </tr>
            </table>
        </div>
    }
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
